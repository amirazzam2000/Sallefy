<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ui.HomeFragment"
    android:layout_marginTop="55dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="30dp"
        tools:ignore="MissingConstraints" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/previousBigSong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="130dp"
                android:background="@drawable/ic_navigate_before_black_24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="0dp"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/big_image"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_background_trans"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/dynamic_title_big"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="50dp"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="200dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/welcome"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="20"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dynamic_artist_big"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/default_track_author"
                    android:textColor="@color/colorWhite"
                    android:shadowColor="#000000"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="20"
                    android:textSize="15sp"
                    android:textStyle="italic" />
                <Button
                    android:id="@+id/selectBig"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_background_trans_gradient" />


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/nextBigSong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="130dp"
                android:background="@drawable/ic_navigate_next_black_24dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"

            android:layout_gravity="center_horizontal"
            android:maxWidth="20dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/most_played_songs"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dynamic_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"

        android:background="@drawable/button_background_dark"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />

        <TextView
            android:id="@+id/textViewNewSongs"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"

            android:layout_gravity="center_horizontal"
            android:maxWidth="20dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/recently_added"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dynamic_recyclerViewRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/button_background_dark"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

        <TextView
            android:id="@+id/textViewRecentPlayList"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"

            android:layout_gravity="center_horizontal"
            android:maxWidth="20dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/new_playlists"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dynamic_recyclerViewRecentPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/button_background_dark"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />
        <TextView
            android:id="@+id/textViewPopular"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"

            android:layout_gravity="center_horizontal"
            android:maxWidth="20dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/popular_playlists"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dynamic_recyclerViewPopularPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/button_background_dark"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        </LinearLayout>

    </ScrollView>
