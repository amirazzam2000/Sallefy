<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.url.salle.amir.azzam.sallefy" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".controller.InitializationActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.UploadPlaylistActivity" />
        <activity android:name=".controller.MusicViewActivity" />
        <activity
            android:name=".controller.HomePageActivity"
            android:label="@string/title_activity_home_page" />
        <activity android:name=".controller.ForgotPasswordActivity" />
        <activity android:name=".controller.SignUpActivity" />
        <activity android:name=".controller.UploadActivity" />
        <activity android:name=".controller.DynamicPlaybackActivity" />
        <activity android:name=".controller.LoginActivity" />


        <service
            android:name=".controller.music.MusicService"
            android:enabled="true" />
    </application>

</manifest>